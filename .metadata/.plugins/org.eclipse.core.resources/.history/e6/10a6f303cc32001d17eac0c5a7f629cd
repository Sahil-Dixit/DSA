
public class ReverseWordWise {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String str = "Welcome to Coding Ninjas";
		String rev = " ";
		int startIndex = 0;
		for (int i = 0; i < str.length(); i++) {
			if (str.charAt(i) == ' ') {
				str.substring(startIndex, i);
			}
		}
	}

}
